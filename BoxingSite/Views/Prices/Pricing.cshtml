@using Microsoft.AspNet.Identity

@{
    ViewBag.Title = "Prices";
}

<div id="wrapper">
    <!-- One -->
    <section id="one" class="main sectionBgColor">
        <div class="inner spotlight style1">
            <div class="content align-center">
                <header class="major">
                    <h2>King Boxing Pricing</h2>
                </header>
                <p>
                    Membership and Pay As You Go Training Costs. Call 07023 123456 for more information.
                </p>
            </div>
        </div>
    </section>


    <!-- Four -->
    <section id="four" class="main special">
        <div class="inner">
            <header>
                <h2>Payment Options</h2>
            </header>
            <div class="features">
                <section>
                    <span class="icon major far fa-heart style1"></span>
                    <h3>Pay as you Go</h3>
                    <div class="inner">
                        <h2>Pay As You Go Training</h2>
                        <table>
                            <tr>
                                <td>Adults (17+)</td>
                                <td>£7 per session</td>
                            </tr>
                            <tr>
                                <td>Student</td>
                                <td>£5 per session</td>
                            </tr>
                            <tr>
                                <td>Kids (5-16)</td>
                                <td>£5 per session</td>
                            </tr>
                        </table>
                    </div>
                </section>
                <section>
                    <span class="icon solid major fas fa-heart style2"></span>
                    <h3>Membership</h3>
                    <div class="inner">
                        <h2>Membership</h2>
                        <table>
                            <tr>
                                <td>Adults (17+)</td>
                                <td>£7 per session</td>
                            </tr>
                            <tr>
                                <td>Student</td>
                                <td>£5 per session</td>
                            </tr>
                            <tr>
                                <td>Kids (5-16)</td>
                                <td>£5 per session</td>
                            </tr>
                        </table>

                        <ul class="actions stacked">
                            @if (!Request.IsAuthenticated)
                            {
                                <li>
                                    @Html.ActionLink("Register", "Register", "Account",
                                     new { id = "registerLink" }, new { @class = "button primary fit" })
                                </li>
                                <li>
                                    @Html.ActionLink("Log in", "Login", "Account",
                                     new { id = "loginLink" }, new { @class = "button fit" })
                                </li>
                            } else
                            {
                                <li>
                                    @Html.ActionLink("Create Membership", "Index", "Home",
                                        new { @class = "button primary fit" })
                                </li>
                            }
                        </ul>
                    </div>
                </section>

            </div>
            <p>
                Call 07023 123456 for more information.
            </p>
        </div>
    </section>

    <div class="parallax align-center" style="height: 220px; background-image: url('../../images/boxing/chris-kendall-sJ6az6-T1u8-unsplash.jpg')">
        <a href="../../Home/Schedule" class="button btn-default large">King Boxing Schedule</a>
    </div>


</div>



